<mvc:View controllerName="project1.controller.View1"  displayBlock="true"
    
    	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
    
    >
    <Page id="page" title="{i18n>title}">
        <content >

	<Table id="idProductsTable"
		inset="false"
		items="{
			path: '/Products',
            expand: 'Category, Supplier',
			sorter: {
				path: 'ProductName'
			}
		}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Products" level="H2"/>
					<ToolbarSpacer />
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<Label text="Wide range of available products"/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="ProductName" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Supplier" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Unit Price" />
			</Column>
			<Column
				hAlign="End">
				<Text text="Quantity Per Unit" />
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<ObjectIdentifier
						title="{ProductName}"
						text="{/Categories/Description}"/>
					<Text
						text="{/Supplier/CompanyName}" />
					<Text
						text="{UnitPrice}" />
					<Text
						text="{QuantityPerUnit}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>



</content >

    </Page>
</mvc:View>
